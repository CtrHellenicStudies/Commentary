  "scripts": {
    "build": "npm run build:css && react-scripts build",
    "build:css": "node-less-chokidar src/ -o src/",
    "watch:css": "npm run build:css && node-less-chokidar src/ -o src/ --watch --recursive",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged",
    "start:js": "react-scripts start",
    "start": "npm-run-all -p watch:css start:js",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "CI=true react-scripts test --env=jsdom",
    "jsdoc": "jsdoc src -r -c .jsdoc.json -d docs"
  },
  "pre-commit": "lint:staged",
  "lint-staged": {
    "*.{md,sh,txt,xml,html,json}": [
      "editorconfig-tools fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com/CtrHellenicStudies/Commentary.git"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/docs/",
      "!<rootDir>/public/",
      "!<rootDir>/build/",
      "!<rootDir>/coverage/",
      "!<rootDir>/k8s/"
    ]
  },
  "devDependencies": {
    "npm-run-all": "^4.1.2"
  }
